#!/usr/bin/env bash
# Using a while loop and case statement to display different messages
x=1
while [ $x -le 20 ]
do
    echo "$x"
    case $x in
	4)
	    echo "bad luck from China"
	    ;;
	9)
	    echo "bad luck from Japan"
	    ;;
	17)
	    echo "bad luck from Italy"
	    ;;
    esac
    ((x++))
done
